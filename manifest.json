{
  "name": "ssslack",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "<all_urls>"
  ],
  "page_action": {
    "default_icon": {
      "16": "images/icon-16.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/*"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
